<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <package name="group" namespace="/group" extends="defaultj">
        <!-- 科室start -->
        <!--新增科室 -->
        <action name="addDept" method="addDept" class="deptInfoAction">
            <result name="success" type="json">
                <param name="ignoreHierarchy">false</param>
                <param name="excludeNullProperties">true</param>
            </result>
        </action>
       <action name="listDept" method="listDept" class="deptInfoAction">
            <result name="success" type="json">
               <param name="ignoreHierarchy">false</param>
               <param name="excludeNullProperties">true</param>
            </result>
       </action>
       <action name="listDeptNames" method="listDeptNames" class="deptInfoAction">
            <result name="success" type="json">
               <param name="ignoreHierarchy">false</param>
               <param name="excludeNullProperties">true</param>
            </result>
       </action>
       <action name="searchDept" method="searchDept" class="deptInfoAction">
            <result name="success" type="json">
               <param name="ignoreHierarchy">false</param>
               <param name="excludeNullProperties">true</param>
            </result>
       </action>
        <!--更新科室信息 -->
        <action name="updateDept" method="updateDept" class="deptInfoAction">
            <result name="success" type="json">
                <param name="ignoreHierarchy">false</param>
                <param name="excludeNullProperties">true</param>
            </result>
        </action>
        <!--删除科室 -->
        <action name="deleteDept" method="deleteDept" class="deptInfoAction">
            <result name="success" type="json">
                <param name="ignoreHierarchy">false</param>
                <param name="excludeNullProperties">true</param>
            </result>
        </action>
        <!--批量删除科室 -->
        <action name="batchDeleteDept" method="batchDeleteDept" class="deptInfoAction">
            <result name="success" type="json">
                <param name="ignoreHierarchy">false</param>
                <param name="excludeNullProperties">true</param>
            </result>
        </action>
 
        <!-- content start -->
        <!-- list content -->
       <action name="listContent" method="listContent" class="contentInfoAction">
            <result name="success" type="json">
               <param name="ignoreHierarchy">false</param>
               <param name="excludeNullProperties">true</param>
            </result>
       </action>
        <!-- search content -->
       <action name="searchContent" method="searchContent" class="contentInfoAction">
            <result name="success" type="json">
               <param name="ignoreHierarchy">false</param>
               <param name="excludeNullProperties">true</param>
            </result>
       </action>
        <!-- delete the content -->
        <action name="deleteContent" method="deleteContent" class="contentInfoAction">
            <result name="success" type="json">
                <param name="ignoreHierarchy">false</param>
                <param name="excludeNullProperties">true</param>
            </result>
        </action>
        <!-- batch delete the content -->
        <action name="batchDeleteContent" method="batchDeleteContent" class="contentInfoAction">
            <result name="success" type="json">
                <param name="ignoreHierarchy">false</param>
                <param name="excludeNullProperties">true</param>
            </result>
        </action>
        <!-- batch delete the content -->
        <action name="auditorContent" method="auditorContent" class="contentInfoAction">
            <result name="success" type="json">
                <param name="ignoreHierarchy">false</param>
                <param name="excludeNullProperties">true</param>
            </result>
        </action>
        <!-- content end -->

        <!-- Column start -->
        <!-- new Column -->
        <action name="addColumn" method="addColumn" class="conlInfoAction">
            <result name="success" type="json">
                <param name="ignoreHierarchy">false</param>
                <param name="excludeNullProperties">true</param>
            </result>
        </action>
        <!-- list Column -->
       <action name="listColumn" method="listColumn" class="conlInfoAction">
            <result name="success" type="json">
               <param name="ignoreHierarchy">false</param>
               <param name="excludeNullProperties">true</param>
            </result>
       </action>
        <!-- search Column -->
       <action name="searchColumn" method="searchColumn" class="conlInfoAction">
            <result name="success" type="json">
               <param name="ignoreHierarchy">false</param>
               <param name="excludeNullProperties">true</param>
            </result>
       </action>
        <!-- update the Column info -->
        <action name="updateColumn" method="updateColumn" class="conlInfoAction">
            <result name="success" type="json">
                <param name="ignoreHierarchy">false</param>
                <param name="excludeNullProperties">true</param>
            </result>
        </action>
        <!-- delete the Column -->
        <action name="deleteColumn" method="deleteColumn" class="conlInfoAction">
            <result name="success" type="json">
                <param name="ignoreHierarchy">false</param>
                <param name="excludeNullProperties">true</param>
            </result>
        </action>
        <!-- batch delete the Column -->
        <action name="batchDeleteColumn" method="batchDeleteColumn" class="conlInfoAction">
            <result name="success" type="json">
                <param name="ignoreHierarchy">false</param>
                <param name="excludeNullProperties">true</param>
            </result>
        </action>
        <!-- Column end -->
    </package>
    
    <package name="content"  extends="defaultj">
        <!-- new content -->
        <action name="addContent" method="addContent" class="contentInfoAction">
            <interceptor-ref name="defaultStack">
                <!-- 10M
                    <param name="fileUpload.allowedTypes">
                    image/gif,image/jpeg,image/pjpeg,image/jpg,image/bmp,image/pict,image/x-photoshop,image/x-quicktime,image/tiff
                    text/plain,
                    application/pdf,
                    audio/x-midi,video/quicktime,audio/x-mpeg,video/mp4,application/x-shockwave-flash,application/vnd.rn-realmedia
                    </param>
                    <param name="maximumSize">10485760</param>
                -->
            </interceptor-ref>
            <param name="savePath" >/</param> 
            <result name="success" type="json">
                <param name="ignoreHierarchy">false</param>
                <param name="excludeNullProperties">true</param>
            </result>
        </action>
        <!-- update the content info -->
        <action name="updateContent" method="updateContent" class="contentInfoAction">
            <interceptor-ref name="defaultStack">
            </interceptor-ref>
            <result name="success" type="json">
                <param name="ignoreHierarchy">false</param>
                <param name="excludeNullProperties">true</param>
            </result>
        </action>
    </package>
</struts>